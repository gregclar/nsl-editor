<% increment_tab_index(0) %>

<% if @working_draft %>
  <% if can?(:place_name, @working_draft) && (!Rails.configuration.try('multi_product_tabs_enabled') || current_product_from_context&.has_the_same_reference?(@instance) || current_registered_user.roles.blank? ) %>
    <%= render partial: "instances/workspace/tab_main" %>
  <% else %>
    <p>
      You do not have permission to place names in this draft taxonomy.
      If you believe this is an error, please contact the administrator.
    </p>
  <% end %>
<% else %>
    <h5>No draft taxonomy selected</h5>
    <p>
      Select a draft taxonomy from the Draft Taxonomies menu at the top of the page or use the Edit Profile tab to edit information in the published taxonomy.
    </p>
<% end %>
